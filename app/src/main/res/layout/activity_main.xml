<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="File Storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/write_file_to_internal_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="WRITE FILE TO INTERNAL STORAGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/read_file_from_internal_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ FILE FROM INTERNAL STORAGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_file_to_internal_storage" />

    <Button
        android:id="@+id/write_file_to_external_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WRITE FILE TO EXTERNAL STORAGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_file_from_internal_storage"/>

    <Button
        android:id="@+id/read_file_from_external_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ FILE TO EXTERNAL STORAGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_file_to_external_storage" />

</androidx.constraintlayout.widget.ConstraintLayout>